<!-- Setup the main.handlebars file so it's able to be used by Handlebars.
Setup the index.handlebars to have the template that Handlebars can render onto.
Create a button in index.handlebars that will submit the user input into the database. -->

<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center" id="top-bar">
      <h1>Grocery List</h1>
    </div>
    <div class="col-xs-6 text-center" class="task">
      <div class="row">
        <h2>Need to buy</h2>
        {{#each burger_data}}
          {{#unless this.devoured}}
            <div class="col-xs-9 textcenter" id = "listItem">
              <pre>
            {{this.burger_name}}
          </pre>
            </div>
            <div class="col-xs-3 text-center">
              <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                <input type="hidden" name="burger_id" type="text" value= {{this.id}}>
                <br>
                <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></button>
              </form>
            </div>
            <div class="col-xs-3 text-center">
              <form class="" action="/burgers/update?_method=DELETE" method="DELETE">
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>
    </div>
    <div class="col-xs-6 text-center" class="task">
      {{#each burger_data}}
        {{#if this.devoured}}
          <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
        {{/if}}
      {{/each}}
    </div>

  </div>

</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center enter_section">
      <form action="/burgers/create" method="POST">
        <input type="text" name="burger_name" class="form-control" id="enter_text" placeholder="add new grocery item">
        <button type="submit" class="btn btn-primary" id="text-enter-button">Add new item</button>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 text-center">
      <form action="/delete" method="post">
          <button type="submit" class="btn btn-warning" id="delete">Delete All</button>
      </form>
    </div>
  </div>
</div>
